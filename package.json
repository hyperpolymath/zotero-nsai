{
  "name": "zotero-nsai",
  "version": "0.1.0-alpha",
  "description": "NSAI: Neurosymbolic validation and preparation for Zotero research data",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:res": "rescript build",
    "clean:res": "rescript clean",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "rescript build",
    "typecheck": "echo 'ReScript provides type checking - run npm run build:res'"
  },
  "keywords": [
    "zotero",
    "validation",
    "neurosymbolic",
    "research",
    "citations",
    "wittgenstein",
    "tractatus",
    "bibliography",
    "formal-verification",
    "type-safety",
    "offline-first",
    "privacy-first",
    "accessibility",
    "rsr-compliant"
  ],
  "author": "Hyperpolymath",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hyperpolymath/zotero-nsai.git"
  },
  "bugs": {
    "url": "https://github.com/Hyperpolymath/zotero-nsai/issues"
  },
  "homepage": "https://github.com/Hyperpolymath/zotero-nsai#readme",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/Hyperpolymath"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^25.0.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "rescript": "^11.1.4",
    "vite": "^6.3.5",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@rescript/core": "^1.6.1",
    "zod": "^3.24.2"
  },
  "rsr": {
    "compliance": "silver",
    "version": "1.0.0",
    "verified": "2024-11-22"
  },
  "security": {
    "policy": "https://github.com/Hyperpolymath/zotero-nsai/blob/main/SECURITY.md",
    "contact": "https://github.com/Hyperpolymath/zotero-nsai/security/advisories/new"
  },
  "tpcf": {
    "perimeter": 3,
    "description": "Community Sandbox - Open Contribution"
  }
}
